# Django Configuration
SECRET_KEY=your-secret-key-here
DEBUG=False
ALLOWED_HOSTS=your-render-app.onrender.com,localhost,127.0.0.1

# Database Configuration (PostgreSQL)
# Option 1: Use DATABASE_URL (Render's preferred method)
DATABASE_URL=postgresql://username:password@hostname:port/database_name

# Option 2: Use individual variables (alternative)
DATABASE_NAME=heritage_hotel
DATABASE_USER=postgres
DATABASE_PASSWORD=your-database-password
DATABASE_HOST=your-database-host
DATABASE_PORT=5432

# For local development only
USE_SQLITE=False

# CORS Configuration
CORS_ALLOW_ALL_ORIGINS=False
CORS_ALLOWED_ORIGINS=https://your-frontend-domain.com,https://your-admin-domain.com

# Cloudinary Configuration
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# Email Configuration
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=Heritage Hotel <your-email@gmail.com>
ADMIN_EMAIL=admin@heritagehotel.com